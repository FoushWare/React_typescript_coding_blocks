{
  "name": "react_typescript",
  "version": "1.0.0",
  "scripts": {
    "build": "babel src --extensions .js,.ts,.tsx --out-dir dist",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "check-types": "tsc",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "validate": "npm-run-all --parallel check-types check-format lint build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FoushWare/React_typescript_coding_blocks.git"
  },
  "keywords": [
    "Typescript",
    "testing"
  ],
  "author": "Ahmed fouad (Foushware)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FoushWare/React_typescript_coding_blocks/issues"
  },
  "homepage": "https://github.com/FoushWare/React_typescript_coding_blocks#readme",
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn eslint"
    ],
    "**/*.+(js|json|ts|tsx)": [
      "prettier --write",
      "git add"
    ]
  }
}
